<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneVerify">
    <TextView
        android:id="@+id/app_bar_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bar"
        android:text="GERTAMO"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp" />
    <EditText
        android:layout_below="@id/app_bar_log"
        android:id="@+id/code_num"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:layout_width="150dp"
        android:background="#8F8F8F"
        android:inputType="phone"
        android:digits="0123456789"
        android:maxLength="6"
        android:hint="Kod"
        android:textSize="40dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/code_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/code_num"
        android:layout_centerInParent="true"
        android:text="PODAJ KOD SMS" />
</RelativeLayout>